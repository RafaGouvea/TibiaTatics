<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/brown"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/guild_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Name:"
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_guild_player_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Dirwal"
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toStartOf="@+id/guild_player_status"
        app:layout_constraintStart_toEndOf="@+id/guild_player_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guild_player_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Level:"
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_guild_player_name" />

    <TextView
        android:id="@+id/tv_guild_player_vocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Master Sorcerer"
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/guild_player_vocation"
        app:layout_constraintTop_toTopOf="@+id/guild_player_vocation" />

    <TextView
        android:id="@+id/guild_player_vocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Vocation:"
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guild_player_level" />

    <TextView
        android:id="@+id/tv_guild_player_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="450"
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/guild_player_level"
        app:layout_constraintTop_toTopOf="@+id/guild_player_level" />

    <ImageView
        android:id="@+id/img_outfit_guild_player"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginEnd="36dp"
        android:src="@drawable/knight_outfit"
        app:layout_constraintBottom_toTopOf="@+id/tv_guild_player_joined"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guild_player_status" />

    <TextView
        android:id="@+id/guild_player_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Rank: "
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guild_player_vocation" />

    <TextView
        android:id="@+id/tv_guild_player_rank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Ivory Guardian"
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/guild_player_name"
        app:layout_constraintTop_toTopOf="@+id/guild_player_rank" />

    <TextView
        android:id="@+id/guild_player_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Status: "
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_guild_player_status"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_guild_player_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Offline"
        android:layout_marginEnd="12dp"
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_guild_player_name" />

    <TextView
        android:id="@+id/guild_player_joined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:text="Joined: "
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/tv_guild_player_joined"
        app:layout_constraintTop_toTopOf="@+id/guild_player_title" />

    <TextView
        android:id="@+id/tv_guild_player_joined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2008-06-17"
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/tv_guild_player_status"
        app:layout_constraintTop_toTopOf="@+id/guild_player_joined" />

    <TextView
        android:id="@+id/guild_player_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Title: "
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guild_player_rank" />

    <TextView
        android:id="@+id/tv_guild_player_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Legendary naab"
        android:textColor="@color/brown_text"
        android:textSize="16sp"
        android:layout_marginStart="12dp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/guild_player_title"
        app:layout_constraintTop_toTopOf="@+id/guild_player_title" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="6dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_guild_player_title"
        android:orientation="horizontal" />

</androidx.constraintlayout.widget.ConstraintLayout>