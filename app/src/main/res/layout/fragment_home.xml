<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_home"
    tools:context=".ui.fragments.HomeFragment">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:scaleType="centerCrop"
        android:src="@drawable/papel_antigo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="25dp"
        android:layout_height="200dp"
        android:layout_marginBottom="40dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ornament"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/boss_bosted"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/boss_bosted"
        android:textColor="@color/color_background_lists"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_boss"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:scaleType="centerCrop"
        android:src="@drawable/abyssador"
        app:layout_constraintTop_toBottomOf="@id/boss_bosted"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="@+id/imageView"/>

    <TextView
        android:id="@+id/tv_boss_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_background_lists"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toStartOf="@+id/imageView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_boss"
        tools:text="ABYSSADOR" />

    <TextView
        android:id="@+id/tv_creature_bosted"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/creature_bosted"
        android:textColor="@color/color_background_lists"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_creature_bosted"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/nightmare"
        app:layout_constraintBottom_toTopOf="@+id/bosted_creature_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toBottomOf="@id/boss_bosted" />

    <TextView
        android:id="@+id/bosted_creature_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_background_lists"
        android:textSize="14sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="@+id/tv_boss_name"
        tools:text="NIGHTMARE" />

    <ImageView
        android:id="@+id/box_top_l"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/box_itens"
        app:layout_constraintBottom_toTopOf="@id/box_mid_l"
        app:layout_constraintEnd_toStartOf="@id/box_top_r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/search"
        app:layout_constraintBottom_toBottomOf="@+id/box_top_l"
        app:layout_constraintEnd_toEndOf="@+id/box_top_l"
        app:layout_constraintStart_toStartOf="@+id/box_top_l"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SEARCH"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/box_top_l"
        app:layout_constraintStart_toStartOf="@id/box_top_l"
        app:layout_constraintTop_toTopOf="@+id/box_top_l" />

    <ImageView
        android:id="@+id/box_mid_l"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/box_itens"
        app:layout_constraintEnd_toStartOf="@id/box_top_r"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/box_bottom_r"
        app:layout_constraintTop_toBottomOf="@+id/box_top_l" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/nightmare"
        app:layout_constraintBottom_toBottomOf="@+id/box_mid_l"
        app:layout_constraintEnd_toEndOf="@+id/box_top_l"
        app:layout_constraintStart_toStartOf="@+id/box_top_l" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CREATURES"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/box_top_l"
        app:layout_constraintStart_toStartOf="@id/box_top_l"
        app:layout_constraintTop_toTopOf="@+id/box_mid_l" />

    <ImageView
        android:id="@+id/box_bottom_l"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/box_itens"
        app:layout_constraintEnd_toStartOf="@id/box_top_r"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/box_mid_l" />


    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/rank"
        app:layout_constraintBottom_toBottomOf="@+id/box_bottom_l"
        app:layout_constraintEnd_toEndOf="@+id/box_bottom_l"
        app:layout_constraintStart_toStartOf="@+id/box_bottom_l" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HIGHSCORES"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/box_top_l"
        app:layout_constraintStart_toStartOf="@id/box_top_l"
        app:layout_constraintTop_toTopOf="@+id/box_bottom_l" />


    <ImageView
        android:id="@+id/box_top_r"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/box_itens"
        app:layout_constraintBottom_toTopOf="@id/box_mid_l"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/box_top_l"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/killstatistics"
        app:layout_constraintBottom_toBottomOf="@+id/box_top_r"
        app:layout_constraintEnd_toEndOf="@+id/box_top_r"
        app:layout_constraintStart_toStartOf="@+id/box_top_r"
        app:layout_constraintTop_toTopOf="@+id/box_top_r" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="KILL STATISTICS"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/box_top_r"
        app:layout_constraintStart_toStartOf="@id/box_top_r"
        app:layout_constraintTop_toTopOf="@+id/box_top_r" />

    <ImageView
        android:id="@+id/box_mid_r"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/box_itens"
        app:layout_constraintBottom_toTopOf="@id/box_bottom_r"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/box_mid_l"
        app:layout_constraintTop_toBottomOf="@+id/box_top_l" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/healfriend"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/box_mid_l"
        app:layout_constraintEnd_toEndOf="@+id/box_mid_r"
        app:layout_constraintStart_toStartOf="@+id/box_mid_r"
        app:layout_constraintTop_toTopOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPELLS"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/box_top_r"
        app:layout_constraintStart_toStartOf="@id/box_top_r"
        app:layout_constraintTop_toTopOf="@+id/box_mid_r" />


    <ImageView
        android:id="@+id/box_bottom_r"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:src="@drawable/box_itens"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/box_bottom_l"
        app:layout_constraintTop_toBottomOf="@+id/box_mid_l" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WORLDS"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/box_top_r"
        app:layout_constraintStart_toStartOf="@id/box_top_r"
        app:layout_constraintTop_toTopOf="@+id/box_bottom_r" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/worlds"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/box_bottom_r"
        app:layout_constraintEnd_toEndOf="@+id/box_bottom_r"
        app:layout_constraintStart_toStartOf="@+id/box_bottom_r"
        app:layout_constraintTop_toTopOf="@+id/box_bottom_r" />


</androidx.constraintlayout.widget.ConstraintLayout>