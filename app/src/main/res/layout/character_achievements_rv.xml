<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/brown"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:background="@color/white"
        android:elevation="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_achieviment_name"
        app:layout_constraintStart_toEndOf="@+id/img_third_difficult"
        app:layout_constraintTop_toTopOf="@+id/tv_achieviment_name" />

    <ImageView
        android:id="@+id/img_first_difficult"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:elevation="1dp"
        android:paddingVertical="2dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_achieviment_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_achieviment_name" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:elevation="2dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tv_achieviment_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_third_difficult"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:elevation="1dp"
        android:paddingVertical="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_first_difficult"
        app:layout_constraintStart_toEndOf="@+id/img_second_difficult"
        app:layout_constraintTop_toTopOf="@+id/tv_achieviment_name" />

    <ImageView
        android:id="@+id/img_second_difficult"
        android:layout_width="30dp"
        android:layout_height="24dp"
        android:elevation="1dp"
        android:paddingVertical="2dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_achieviment_name"
        app:layout_constraintStart_toEndOf="@+id/img_first_difficult"
        app:layout_constraintTop_toTopOf="@+id/tv_achieviment_name" />


    <TextView
        android:id="@+id/tv_achieviment_name"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:paddingStart="110dp"
        android:text="No Horse Open Sleigh"
        android:textSize="18sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_secret"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:src="@drawable/achievement_secret"
        app:layout_constraintBottom_toBottomOf="@+id/tv_achieviment_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_achieviment_name" />

</androidx.constraintlayout.widget.ConstraintLayout>